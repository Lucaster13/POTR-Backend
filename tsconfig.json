{
    "compilerOptions": {
        "module": "ES2022",
        "noImplicitAny": false,
        "removeComments": true,
        "moduleResolution": "Node",
        "preserveConstEnums": true,
        "sourceMap": false,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "resolveJsonModule": true,
        "noEmit": true,
        "skipLibCheck": true,
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["./src/**/*", "./globals.d.ts"]
}
